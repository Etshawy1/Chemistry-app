<title>Lectures</title>
<%- include("partails/assistHeader") -%>

    <main class="page-content">
        <div class="container crud-table" ng-app="myApp" ng-controller="namesCtrl">
            <div class="clearfix">
                <div class="form-inline pull-left">
                    <button class="btn btn-success" ng-click="addUser()"><span class="glyphicon glyphicon-plus"> </span>Add more user</button>
                </div>
                <div class="form-inline pull-right">
                    <div class="form-group">
                        <input class="form-control" type="text" ng-model="searchName" placeholder="Type name to search" />
                    </div>
                </div>
            </div>
            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th ng-click="orderBy('code')">Course</th>
                        <th ng-click="orderBy('name')">Center</th>
                        <th ng-click="orderBy('phone')">Lectuer #</th>
                        <th>Day</th>
                        <th>Hour</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    <tr ng-repeat="user in resultUser = (users | filter: {'name': searchName}) | orderBy: order">
                        <td>course </td>
                        <td>center</td>
                        <td>lec#</td>
                        <td>day</td>
                        <td>time</td>
                        <td>
                            <button class="btn btn-primary" ng-click="editUser(user)">Edit</button>
                        </td>
                        <td>
                            <button class="btn btn-danger" ng-click="deleteUser(user)">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="crude-form__wrapper" ng-show="triggerForm">
                <h3 ng-show="editForm">Edit Lecture</h3>
                <h3 ng-show="addForm">Add Lectuer</h3>
                <form name="userForm" ng-model="userForm">
                    <div class="form-group">
                        <div class="form-group col-md-4">
                            <label for="inputCourse">Course</label>
                            <select class="custom-select" id="inputGroupSelect01">
                          <option selected>Courses list</option>
                          <option>...</option>
                        </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group col-md-4">
                            <label for="inputCourse">Center</label>
                            <select class="custom-select" id="inputGroupSelect01">
                          <option selected>Courses list</option>
                          <option>...</option>
                        </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="editLecNo">Lecture Number</label>
                        <input class="form-control" id="editLecNo" type="number" maxlength="2" name="Lecnumber" ng-model="crudFormCode" placeholder="Edit Lecture Number" min="1" required="required" autocomplete="off" />
                        <div class="form-alert alert alert-danger" ng-show="userForm.code.$invalid &amp;&amp; userForm.code.$touched"><span ng-show="userForm.code.$error.number">Please input valid number</span><span ng-show="userForm.code.$error.min">Please input lecture# greater than 1</span><span ng-show="userForm.code.$error.required">Please input Code</span></div>
                    </div>
                    <div class="form-group">
                        <label for="editDay">Day</label>
                        <input class="form-control" id="editDay" type="text" name="Day" ng-model="crudFormPhone" placeholder="Edit Lecture Day" required="required" min="1" />
                    </div>
                    <div class="form-group">
                        <label for="editTime">Time</label>
                        <input class="form-control" id="editTime" type="time" name="time" ng-model="crudFormPassword" placeholder="Edit Lecture Time" required="required" min="1" autocomplete="off" />
                    </div>
                    <div class="form-alert alert alert-danger" ng-show="codeExisted"> This Code has been registerd by other user</div>
                    <button class="btn btn-primary" ng-click="saveEdit(editUserId)" ng-disabled="userForm.$invalid || codeExisted"> <i class="glyphicon glyphicon-pencil"> </i>Save change </button>
                    <button class="btn btn-primary" ng-click="triggerForm = false">
             Cancel                     </button>
                </form>
            </div>
        </div>
    </main>
    </div>
    <!-- page-wrapper -->
    <script src="/javascripts/template.js"></script>
    <%- include("partails/adminFooter") -%>