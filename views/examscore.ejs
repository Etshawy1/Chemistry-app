<title>Exam Scores</title>
<%- include("partails/assistHeader") -%>

    <main class="page-content">
        <div class="container crud-table" ng-app="myApp" ng-controller="namesCtrl">
            <div class="clearfix">
                <div class="form-inline pull-right">
                    <div class="form-group">
                        <input class="form-control" type="text" ng-model="searchName" placeholder="Type name to search" />
                    </div>
                </div>
            </div>
            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th ng-click="orderBy('code')">Code</th>
                        <th ng-click="orderBy('name')">Name</th>
                        <th ng-click="orderBy('phone')">Score</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    <tr ng-repeat="user in resultUser = (users | filter: {'name': searchName}) | orderBy: order">
                        <td>code </td>
                        <td>name</td>
                        <td>score</td>
                        <td>
                            <button class="btn btn-primary" ng-click="editUser(user)">Add</button>
                        </td>
                        <td>
                            <button class="btn btn-danger" ng-click="deleteUser(user)">Remove</button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="crude-form__wrapper" ng-show="triggerForm">
                <h3 ng-show="editForm">Edit Student</h3>
                <h3 ng-show="addForm">Add Student</h3>
                <form name="userForm" ng-model="userForm">
                    <div class="form-group">
                        <label for="editscore">Score</label>
                        <input class="form-control" id="editscorre" type="number" name="score" ng-model="crudFormfName" placeholder="Edit student score" required="required" autocomplete="off" />
                        <div class="form-alert alert alert-danger" ng-show="userForm.fname.$invalid &amp;&amp; userForm.fname.$touched">Please input score</div>
                    </div>
                    <button class="btn btn-primary" ng-click="saveEdit(editUserId)" ng-disabled="userForm.$invalid || codeExisted"> <i class="glyphicon glyphicon-pencil"> </i>Save change </button>
                    <button class="btn btn-primary" ng-click="triggerForm = false"> Cancel</button>
                </form>
            </div>
        </div>
    </main>
    </div>
    <!-- page-wrapper -->
    <script src="/javascripts/template.js"></script>
    <%- include("partails/adminFooter") -%>